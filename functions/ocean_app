SCRIPT_DIR=${0:a:h}
TEMPLATE_DIR="$SCRIPT_DIR/../ocean/templates"
APP_NAME=$1

cp $TEMPLATE_DIR/initd /etc/init.d/$APP_NAME
sed -i '' /etc/init.d/$APP_NAME "s/APP_NAME/$APP_NAME"

cp $TEMPLATE_DIR/monit /etc/monit/conf.d/$1
sed -i '' /etc/monit/monit.d/$APP_NAME "s/APP_NAME/$APP_NAME"

cp $TEMPLATE_DIR/monit /etc/monit/conf.d/$1
sed -i '' /etc/logrotate.d/$APP_NAME "s/APP_NAME/$APP_NAME"